<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/expandIcon"
                android:text="Faculty Name"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- This is the icon that was causing the error - Make sure the drawable exists -->
            <ImageView
                android:id="@+id/expandIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_expanded_more"
                android:contentDescription="Expand or collapse details" />
        </RelativeLayout>

        <TextView
            android:id="@+id/ecodeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="E-Code: E12345"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email: faculty@example.com"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/contactTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Contact: 1234567890"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coordinatorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Coordinator: Yes/No"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/yearTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Year: 2023"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/responsibilityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Responsibility: Teaching"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/venueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Seating Venue: Building A"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/blockTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Block: Block B"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>